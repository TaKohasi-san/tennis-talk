<% if logged_in? %>
  <div class="index-body">
    <div class="row">
      <aside class="col-md-4">
        <%= form_for(@micropost) do |f| %>
          <div class="form-group">
            <%= f.text_area :content, class: 'form-control', rows: 5 %>
          </div>
          <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
        <% end %>
      </aside>
      <div class="col-xs-8">
        <%= render 'microposts/microposts', microposts: @microposts %>
      </div>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1 class="toppage-name">Welcome to the Tennis talk</h1>
      <%= link_to 'Start!', signup_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'Login!', login_path, class: 'btn btn-lg btn-success' %>
    </div>
  </div>
<% end %>